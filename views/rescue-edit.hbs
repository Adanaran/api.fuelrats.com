<div class="container-fluid">
  <h1 class="page-header">Rescue</h1>

  <div class="row">
    <div class="col-md-8">
      <dl class="dl-horizontal row">
        <dt class="col-sm-2">Status:</dt>
        <dd class="col-sm-10">
          {{#if codeRed}}
            <span class="text-danger">CODE RED</span>
          {{elseif open}}
            Open
            {{#if active}}
              and active
            {{else}}
              and inactive
            {{/if}}
          {{else}}
            Closed
          {{/if}}
        </dd>

        <dt class="col-sm-2">Platform:</dt>
        <dd class="col-sm-10">{{ platform }}</dd>

        <dt class="col-sm-2">System:</dt>
        <dd class="col-sm-10">{{ system }}</dd>

        {{#if quotes}}
          <dt class="col-sm-2">Quotes:</dt>
          <dd class="col-sm-10">{{ quotes }}</dd>
        {{/if}}

        <dt class="col-sm-12">Notes:</dt>
        <dd class="col-sm-12">{{ notes }}</dd>
      </dl>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <strong>Rats</strong>
        </div>

        <ul class="list-group list-group-flush">
          {{#each rats}}
            <li class="list-group-item">
              {{ CMDRname }}

              {{#if firstLimpet}}
                <span class="label label-pilllabel-primary">First Limpet</span>
              {{/if}}
            </li>
          {{/each}}
          {{#each unidentifiedRats}}
            <li class="list-group-item">
              {{ this }}
              {{#if firstLimpet}}
                <span class="label label-pilllabel-primary">First Limpet</span>
              {{/if}}
            </li>
          {{/each}}
          <li class="list-group-item">
            <div class="input-group">
              <input placeholder="Add Rat" class="form-control">
              <span class="input-group-btn">
                <button type="button" class="btn btn-primary">Add</button>
              </span>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!--  Unidentified rats: {{unidentifiedRats}}-->
  <div class="row">
    <a class="btn btn-primary pull-md-right" href="/paperwork/{{ rescue._id }}">Save</a>
  </div>
</div>
