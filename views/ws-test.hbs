<!doctype html>

<script>
  var socket

  socket = new WebSocket( 'ws://localhost:8080' )

  socket.onopen = function ( event ) {
    console.log( 'connected!' )
  }

  socket.onmessage = function ( event ) {
    var data

    data = JSON.parse( event.data )

    switch ( data.type ) {
      case 'welcome':
        socket.send( JSON.stringify({
          data: {
            email: 'mecha@squeak.net',
            password: 'password'
          },
          type: 'login'
        }))
    }

    console.log( data )
  }
</script>
